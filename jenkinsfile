pipeline {
    agent any
   tools {
     nodejs 'node'
  }

    stages {
      
        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }
        stage('Run Tests') {
            steps {
                bat 'npm test || echo "No tests defined"'
            }
        }
        stage('Build Application') {
            steps {
                bat 'npm run build'
            }
        }
    }
}
